<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="cartViewModel"
            type="com.example.onlineshop.viewModel.CartViewModel" />

        <variable
            name="position"
            type="Integer" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/cart_image_product"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_view_cart_name_product"
            android:layout_toLeftOf="@id/cart_image_product"
            android:layout_marginRight="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@id/cart_image_product"
            android:text="@{cartViewModel.cartLiveData.get(position).name}"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@id/cart_image_product">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_trash"
                android:background="#FFFFFF"
                android:layout_gravity="center"
                android:onClick="@{() -> cartViewModel.deleteFromCart(cartViewModel.cartLiveData.get(position))}"
                android:padding="14dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_cart"
                android:background="#FFFFFF"
                android:layout_gravity="center"
                android:onClick="@{() -> cartViewModel.addCartAgain(cartViewModel.cartLiveData.get(position))}"
                android:padding="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="12dp"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </LinearLayout>
    </RelativeLayout>
</layout>
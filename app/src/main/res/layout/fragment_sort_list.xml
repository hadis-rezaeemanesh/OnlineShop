<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="sortListViewModel"
            type="com.example.onlineshop.viewModel.SortListViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.fragment.SortListFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="مرتب سازی"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/primary_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:id="@+id/txt_view_best_sellers"
            android:text="پرفروش ترین ها"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            android:gravity="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:id="@+id/txt_view_most_expensive"
            android:textSize="18sp"
            android:textColor="@color/primary_text"
            android:gravity="center"
            android:text="گران ترین ها" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:id="@+id/txt_view_cheapest"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            android:gravity="center"
            android:text="ارزان ترین ها" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:id="@+id/txt_view_newest"
            android:textSize="18sp"
            android:textColor="@color/primary_text"
            android:gravity="center"
            android:text="جدیدترین ها" />

    </LinearLayout>
</layout>